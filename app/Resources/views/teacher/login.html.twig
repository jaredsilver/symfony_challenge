{% extends 'base.html.twig' %}

{% block body %}
    <h1>Log into Your Teacher Account</h1>
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <form action="{{ path('teacher_login') }}" method="post">
        <label for="username">Email</label>
        <input type="text" id="username" name="_username" value="{{ last_username }}" />
        <label for="password">Password</label>
        <input type="password" id="password" name="_password" />
        <input type="hidden" name="_target_path" value="/teacher/games" />
        <button type="submit">Let's Do This!</button>
        <a class="secondary-cta" href="{{ path('teacher_join') }}">Don't Have an Account?</a>
    </form>
{% endblock %}
